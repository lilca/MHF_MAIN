<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/linearLayout0"
   	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/kafus_bg"
    >
	<mediba.ad.sdk.android.openx.MasAdView
		android:id="@+id/adview"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:scrollbars="none"/>
	<Button
	    android:text="@string/search_button"
	    android:background="@drawable/btnimage_search"
	    android:id="@+id/button1" android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <ListView android:layout_width="match_parent" android:id="@+id/listView1" android:layout_height="fill_parent"></ListView>
</LinearLayout>
